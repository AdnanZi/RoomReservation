@{
    ViewBag.Title = "Scheduler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Scheduler</h2>

@if (Request.IsAuthenticated)
{

    <div id='calendar'></div>

    @Html.Hidden("hdnRoomId", (int)ViewBag.RoomID, new { @id = "hdnRoomId" })
    @Html.Hidden("hdnUserName", (string)ViewBag.UserName, new { @id = "hdnUserName" })

    <div>
        <div id="eventModal" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Event</h4>
                    </div>
                    <div class="modal-body">
                        <input class="form-control" id="txtTitle" type="text"
                               title="Title" placeholder="Event title..." />
                    </div>
                    <div class="modal-footer">
                        <button id="btnDelete" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                        <button id="btnSave" type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div>
            <div id="confimationModal" class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Confirmation</h4>
                        </div>
                        <div class="modal-body">
                            <p>Are you sure that you want to delete this event?</p>
                        </div>
                        <div class="modal-footer">
                            <button id="btnYes" type="button" class="btn btn-danger" data-dismiss="modal">Yes</button>
                            <button id="btnNo" type="button" class="btn btn-primary">No</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    </div>

    @section Scripts {
        <script type="text/javascript">
            schedulerNS.calendar.setupCalendar();
        </script>
    }
}
else
{
    @Html.Partial("~/Views/Account/Login.cshtml", new RoomReservation.Models.LoginViewModel())
}